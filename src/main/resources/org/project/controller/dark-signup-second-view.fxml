<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox prefHeight="1080.0" prefWidth="1920.0" style="-fx-background-color: #000000;" stylesheets="@dark-login-view.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.project.controller.CommunistSignupSecondView">
    <children>
        <HBox prefHeight="1080.0" prefWidth="80.0" style="-fx-border-color: #000000; -fx-border-width: 5;">
            <HBox.margin>
                <Insets />
            </HBox.margin>
            <children>
                <ImageView fitHeight="1089.0" fitWidth="129.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@images/nazii.png" />
                    </image>
                </ImageView>
            </children>
        </HBox>
        <VBox prefHeight="1080.0" prefWidth="1819.0" style="-fx-background-color: #000000;">
            <children>
                <VBox prefHeight="717.0" prefWidth="1781.0" style="-fx-background-color: #000000;" />
                <VBox prefHeight="764.0" prefWidth="1781.0" style="-fx-background-color: #000000;">
                    <children>
                        <TextField fx:id="firstNameField" alignment="CENTER" maxHeight="45.0" maxWidth="300.0" minHeight="45.0" minWidth="300.0" prefHeight="45.0" prefWidth="300.0" promptText="First Name" style="-fx-background-color: #272727; -fx-border-color: #000000; -fx-border-width: 3; -fx-border-radius: 25; -fx-background-radius: 25;">
                            <font>
                                <Font name="Roboto Medium" size="14.0" />
                            </font>
                            <opaqueInsets>
                                <Insets left="10.0" />
                            </opaqueInsets>
                            <VBox.margin>
                                <Insets bottom="10.0" left="15.0" right="15.0" />
                            </VBox.margin>
                        </TextField>
                        <TextField fx:id="lastNameField" alignment="CENTER" maxHeight="45.0" maxWidth="300.0" minHeight="45.0" minWidth="300.0" prefHeight="45.0" prefWidth="300.0" promptText="Last Name" style="-fx-background-color: #272727; -fx-border-color: #000000; -fx-border-width: 3; -fx-border-radius: 25; -fx-background-radius: 25;">
                            <font>
                                <Font name="Roboto Medium" size="14.0" />
                            </font>
                            <opaqueInsets>
                                <Insets left="10.0" />
                            </opaqueInsets>
                            <VBox.margin>
                                <Insets left="15.0" right="15.0" />
                            </VBox.margin>
                        </TextField>
                        <DatePicker fx:id="birthField" prefHeight="45.0" prefWidth="280.0" style="-fx-background-color: #272727; -fx-border-color: #272727; -fx-border-width: 3;">
                            <VBox.margin>
                                <Insets left="25.0" right="25.0" top="10.0" />
                            </VBox.margin>
                        </DatePicker>
                        <Label fx:id="ageError" text="You can't sign up if you are under the age of 12." textFill="RED" visible="false">
                            <font>
                                <Font name="Roboto Medium" size="12.0" />
                            </font>
                            <VBox.margin>
                                <Insets bottom="16.0" left="325.0" top="-31.0" />
                            </VBox.margin>
                        </Label>
                        <HBox>
                            <VBox.margin>
                                <Insets left="15.0" top="10.0" />
                            </VBox.margin>
                            <children>
                                <Button maxHeight="45.0" maxWidth="130.0" minHeight="45.0" minWidth="145.0" mnemonicParsing="false" onAction="#signUpButtonClicked" prefHeight="45.0" prefWidth="130.0" text="Sign Up">
                                    <font>
                                        <Font name="Roboto Medium" size="14.0" />
                                    </font>
                                    <HBox.margin>
                                        <Insets />
                                    </HBox.margin>
                                </Button>
                                <Button maxHeight="45.0" maxWidth="130.0" minHeight="45.0" minWidth="145.0" mnemonicParsing="false" onAction="#cancelButtonClicked" prefHeight="45.0" prefWidth="130.0" text="Back">
                                    <font>
                                        <Font name="Roboto Medium" size="14.0" />
                                    </font>
                                    <HBox.margin>
                                        <Insets left="10.0" />
                                    </HBox.margin>
                                </Button>
                            </children>
                        </HBox>
                        <HBox>
                            <VBox.margin>
                                <Insets left="20.0" top="10.0" />
                            </VBox.margin>
                            <children>
                                <Label text="Already a Comrade?" textFill="WHITE" wrapText="true">
                                    <font>
                                        <Font name="Roboto Medium" size="12.0" />
                                    </font></Label>
                                <Label fx:id="loginLabel" onMouseClicked="#loginButtonClicked" text="Log in" textFill="RED">
                                    <HBox.margin>
                                        <Insets left="3.0" />
                                    </HBox.margin>
                                    <font>
                                        <Font name="Roboto Medium" size="12.0" />
                                    </font>
                                </Label>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</HBox>
